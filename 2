<body>
    <div class="container">
        <h2>Calculadora de ROI</h2>
        <label>Receita Gerada (R$)</label>
        <input type="number" id="revenue" placeholder="Digite a receita gerada">
        
        <label>Investimento Inicial (R$)</label>
        <input type="number" id="investment" placeholder="Digite o investimento inicial">
        
        <label>Custos Operacionais (R$)</label>
        <input type="number" id="costs" placeholder="Digite os custos operacionais">
        
        <button onclick="calculateROI()">Calcular ROI</button>
        
        <div class="result" id="result"></div>
    </div>

    <script>
        function calculateROI() {
            let revenue = parseFloat(document.getElementById("revenue").value);
            let investment = parseFloat(document.getElementById("investment").value);
            let costs = parseFloat(document.getElementById("costs").value);
            
            if (isNaN(revenue) || isNaN(investment) || isNaN(costs)) {
                document.getElementById("result").innerHTML = "Por favor, preencha todos os campos.";
                return;
            }
            
            let profit = revenue - (investment + costs);
            let roi = ((profit / (investment + costs)) * 100).toFixed(2);
            
            document.getElementById("result").innerHTML = `Lucro LÃ­quido: R$ ${profit.toFixed(2)}<br> ROI: ${roi}%`;
        }
    </script>
